// proyecto.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>
#define MAX 10
using namespace std;
struct lote{
	string empresa;
	string ubicacion;
	float telefono;
	float superficie;
	float perimetro;
	float precio;
	};
void insertar();
void listar();
void consulta();
void modificar();
void borrar();
void clasificar();

void main()
{ lote lote[MAX];
	int i=0;
	int opc;
	int n;
	do{
		cout<<"Bienvenido a OfreceTuLoteAUnPrecioRazonable.com"<<endl;
		cout<<"1.-Insertar Datos"<<endl;
		cout<<"2.-Listar Datos"<<endl;
		cout<<"3.-Consulta Datos"<<endl;
		cout<<"4.-Modificar Datos"<<endl;
		cout<<"5.-Borrar Datos"<<endl;
		cout<<"6.-Clasificar Datos"<<endl;
		cout<<"0.-Salir"<<endl;
		cin>>opc;
		switch(opc)
			{case 1: insertar();
					break;
			case 2: listar();
					break;
			case 3: consulta();
					break;
			case 4: modificar();
					break;
			case 5: borrar();
					break;
			case 6: clasificar();
					break;
			case 0: cout<<"Salir";
					break;
			default: cout<<"error";
					break;
			}
	
		}while(opc!=0);
getch();	
}


void insertar()
{	int n;
	lote lote[MAX];
	
		cout<<"ingrese la cantidad de lotes a ofrecer"<<endl;
		cin>>n;
		for(int i=0;i<n;i++)
			{cout<<"ingrese el nombre de su empresa"<<endl;
			cin.ignore();
			getline(cin,lote[i].empresa);
			cout<<"ingrese la ubicacion del terreno"<<endl;
			cin.ignore();
			getline(cin,lote[i].ubicacion);
			cout<<"ingrese su telefono"<<endl;
			cin>>lote[i].telefono;
			cout<<"ingrese la superficie del terreno"<<endl;
			cin>>lote[i].superficie;
			cout<<"ingrese el perimetro del terreno"<<endl;
			cin>>lote[i].perimetro;
			cout<<"ingrese el precio del terreno"<<endl;
			cin>>lote[i].precio;
			}
}
