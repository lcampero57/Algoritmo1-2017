// Eliminar Primos dentro de Matriz.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>
#include "stdlib.h"

#define MAX 10

using namespace std;

struct Vect_Mat{
	int Vector[MAX];
};

Vect_Mat Matriz[MAX][MAX], NOPRIM[MAX][MAX];

void LLENAR(Vect_Mat M[MAX][MAX],int F,int C,int D);
void Mostrar_matriz(Vect_Mat M[MAX][MAX],int F, int C, int D);
void Eliminar_Primos(Vect_Mat M[MAX][MAX],Vect_Mat B[MAX][MAX],int F,int C,int D);
bool VerificarNroPrimo (int N);


void main()
{
	
	int Fil,Col,Dim;

	cout<<"Ingrese el numero de Filas: ";
	cin >> Fil; cout<<"\n\n";
	cout<<"Ingrese el numero de Columnas: "; 
	cin >> Col; cout<<"\n\n";
	cout<<"Ingrese la Dimension del Vector: ";
	cin >>Dim; cout<<"\n\n";

	LLENAR(Matriz,Fil,Col,Dim);
	cout<<"Inicial: "<<"\n\n";
	Mostrar_matriz(Matriz,Fil,Col,Dim);
	cout<<"Final: "<<"\n\n";
	Eliminar_Primos(Matriz,NOPRIM,Fil,Col,Dim);

	_getch();
}

void LLENAR(Vect_Mat M[MAX][MAX],int F,int C,int D)
{
	for(int i=1;i<=F;i++){
		for(int j=1;j<=C;j++){
			cout<<" Llene la Casilla ["<<i<<"]["<<j<<"] :"<<endl;
			for(int d=1;d<=D;d++){
				M[i][j].Vector[d]=rand() %15+1;
				cout<<"Casilla["<<d<<"]: "<<M[i][j].Vector[d];
				cout<<endl;
			}
			cout<<"\n\n";
		}
	}
}

void Mostrar_matriz(Vect_Mat M[MAX][MAX],int F, int C, int D)
{
	int a=0,fin=1;
	for(int i=1;i<=F;i++){
		cout<<"| ";
	  for(int j=1;j<=C;j++){
		  for(int d=1;d<=D;d++){
				cout<<" [";
				cout<<M[i][j].Vector[d]<<"] ";
		  }
		  cout<<"\t";
	  }
	  cout<<" |"<<endl;
	}
}

void Eliminar_Primos(Vect_Mat M[MAX][MAX],Vect_Mat B[MAX][MAX],int F,int C,int D)
{
	int k = 1, G=0; 
	for(int i=1;i<=F;i++){
		cout<<"|";
		for(int j=1;j<=C;j++){
			for(int d=1;d<=D;d++){
				G = M[i][j].Vector[d];
				if(VerificarNroPrimo(G)==false){
					B[i][j].Vector[k]=G;
					cout<<"["<<B[i][j].Vector[k]<<"]";
					k++;
				}
			}
			cout<<"\t |";
			k=1;
		}
		cout<<"|"<<endl;
		k=1;
	}
	G=0;
}


bool VerificarNroPrimo (int N)
{
	bool k = true; // El Numero es Primo.
	for (int i=2;i<=(N-1);i++)
	{
		if(N % i == 0)
		{
			k = false;//El numero no es Primo.
			i=N;
		}
	}
	
	return (k);
}
 
