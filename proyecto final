void main()

{int opc;
	do{
		cout<<"----------------MENU-------------------"<<endl;
		cout<<"1.-Cliente "<<endl;
		cout<<"2.-Proveedor "<<endl;
		cout<<"0.-Salir "<<endl;
		cout<<"Ingrese la opcion que desea: ";
		cin>>opc;
	
		switch(opc)
		{
		case 1: {//clienteeee
			menucliente();
			break;
				}
		case 2:{
			menuproveedor();
			break;
			   }
		case 0: 
			{cout<<"Gracias por usar el programa"<<endl;break;}
		default:
		{cout<<"error"<<endl;break;}
		break;
		}
	}while(opc<0 || opc>2);
getch();
}
void menucliente()
{int a;
	do{
			cout<<"------------Menu Cliente------------"<<endl;
