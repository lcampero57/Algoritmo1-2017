
// Ejercicio 6.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;
//Prototipos de Funciones:

int Factorial(int N);
int Combinatoria(int n,int r);

void main()
{
	int n,r,C;
	do{
		cout<< "Introduce un valor para r mayor a cero: ";
		cin>> r;
	}while (r<0);

	do{
		cout<< "Introduce un valor para n mayor a cero y mayor a 'r' ";
		cin>> n;
	}while (n<0 && n<r);

	C = Combinatoria(n,r);
	cout<< "la Combinatoria es de: "<<n<<" y "<<r<<" es: "<<C;
	_getch();
}

//Declaracion de Funciones:

int Factorial(int N)
{
	int f=1;
	for (int i=1; i<=N; i++)
	{
		f=f*i;
	}
	
	return f;
}

int Combinatoria(int n,int r)
{
	int C;
	C = Factorial(n)/(Factorial(r)*Factorial(n-r));

	return C;
}
